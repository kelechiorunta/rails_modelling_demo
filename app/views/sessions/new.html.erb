<h1>Login</h1>

<%= form_with model: @user, url: perform_login_path, method: :post, local: true do |f| %>
  <%= f.label :email %>:
  <%= f.text_field :email %><br />

  <%= f.label :password %>:
  <%= f.text_field :password %><br />

  <%= f.submit "Login" %>
<% end %>

<p>
  Don't have an account yet?
  <%= link_to "Sign up", signup_path %>
</p>
